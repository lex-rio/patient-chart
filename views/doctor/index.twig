{% extends '../layout.twig' %}

{% block body %}
    <h1>{{title}}</h1>

    <ul>
        {% for doctor in doctors %}
            <li>
                <a href="/doctors/{{ doctor.id }}" title="{{ doctor.specialization }}">
                    {{ doctor.name }}
                </a>
            </li>
        {% endfor %}
    </ul>
    <custom-button color="steelblue"></custom-button>

    <dialog id="form-add">
        {% include 'doctor/form.twig' %}
    </dialog>
{% endblock %}
