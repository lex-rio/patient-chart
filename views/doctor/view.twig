{% extends '../layout.twig' %}

{% block body %}
    <h1>{{title}}</h1>

    name: {{ doctor.name }}
    <br>
    phone: {{ doctor.phone }}

    <ul>
        {% for visit in visits %}
            <li>
                <a href="/visits/{{ visit.id }}">{{ visit.date|date('Y-m-d H:i:s') }}</a> |
                <a href="/patients/{{ visit.Patient.id }}">{{ visit.Patient.name }}</a>
            </li>
        {% endfor %}
    </ul>
{% endblock %}
