{% extends 'layout.twig' %}

{% block body %}
  <h1>{{title}}</h1>

  <ul>
    {% if visits %}
    {% for visit in visits %}
      <li>
          <a href="/visits/{{ visit.id }}">{{ visit.date|date('Y-m-d H:i:s') }}</a> |
          <a href="/patients/{{ visit.PatientId }}">{{ visit.Patient.name|e }}</a> |
          <a href="/doctors/{{ visit.DoctorId }}">{{ visit.Doctor.name|e }}</a>
          {{ visit.diagnosis }}
      </li>
    {% endfor %}
    {% endif %}
  </ul>

    {% include 'visit/form.twig' %}
    
    <add-button color="blue"></add-button>

{% endblock %}
