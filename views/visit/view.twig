{% extends '../layout.twig' %}

{% block body %}
    <h1>{{ title }}</h1>

    <div>
        <a href="/doctors/{{ visit.DoctorId }}">{{ visit.Doctor.name }}</a> visited
        <a href="/patients/{{ visit.PatientId }}">{{ visit.Patient.name }}</a>
    </div>
    <div>
        diagnosis: <b>{{ visit.diagnosis }}</b>
    </div>

    <ul>
        {% for med in meds %}
            <li>
                <a class="{{ med.is_homeopathy ? 'homeopathy' : '' }}" href="/meds/{{ med.id }}">
                    {{ med.name }}
                </a> | {{ med.instructions }}
            </li>
        {% endfor %}
    </ul>
{% endblock %}
