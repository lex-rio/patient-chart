{% extends '../layout.twig' %}

{% block body %}
    <h1>{{ title }}</h1>

    <p>{{ med.description }}</p>

    <ul>
        {% for visit in visits %}
            <li>
                <a href="/visits/{{ visit.id }}">{{ visit.date|date('Y-m-d H:i:s') }}</a> |
                <a href="/doctors/{{ visit.Doctor.id }}">{{ visit.Doctor.name }}</a> |
                <a href="/patients/{{ visit.Patient.id }}">{{ visit.Patient.name }}</a>
            </li>
        {% endfor %}
    </ul>

    <custom-button color="brown" func="edit"></custom-button>

    <dialog id="form-edit">
        {% include 'meds/form.twig' %}
    </dialog>

{% endblock %}
