{% extends '../layout.twig' %}

{% block body %}
    <h1>{{title}}</h1>

    <p>Name: {{ patient.name }}</p>
    <p>Date of birth: {{ patient.birthday }}</p>
    <img src="{{ patient.photo }}" alt="">

    <ul>
        {% for visit in visits %}
            <li>
                <a href="/visits/{{ visit.id }}">{{ visit.date|date('Y-m-d H:i:s') }}</a> |
                <a href="/doctors/{{ visit.Doctor.id }}">{{ visit.Doctor.name }}</a>
                {{ visit.diagnosis }}
            </li>
        {% endfor %}
    </ul>
    <custom-button color="red"></custom-button>
    <custom-button color="brown" func="edit"></custom-button>

    <dialog id="form-add">
        {% include 'visit/form.twig' %}
    </dialog>
    <dialog id="form-edit">
        {% include 'patient/form.twig' %}
    </dialog>
{% endblock %}
