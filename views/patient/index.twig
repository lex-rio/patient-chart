{% extends '../layout.twig' %}

{% block body %}
    <h1>{{title}}</h1>

    <ul>
        {% for patient in patients %}
            <li>
                <a href="/patients/{{ patient.id }}">
                    {{ patient.name }}
                </a>
            </li>
        {% endfor %}
    </ul>
    <custom-button color="gold"></custom-button>

    <dialog id="form-add">
        {% include 'patient/form.twig' %}
    </dialog>
{% endblock %}
